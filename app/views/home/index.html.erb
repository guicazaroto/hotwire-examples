<h1>Home here</h1>
<div data-controller="hello">
  <input data-hello-target="name" />
  <button data-action="click->hello#greet">Say Hi</button>
  <span data-hello-target="output"></span>
</div>


<br><br>
<%= 
  link_to "External", "https://google.com.br",
  data: {
    controller: 'sweetalert',
    action: 'click->sweetalert#showAlert',
    sweetalert_title_value: 'Are you sure?'
  } 
  %>

<br><br><br>

<div data-controller="slideshow">
  <button data-action="slideshow#previous"> ← </button>
  <button data-action="slideshow#next"> → </button>

  <div data-slideshow-target="slide">🐵</div>
  <div data-slideshow-target="slide">🙈</div>
  <div data-slideshow-target="slide">🙉</div>
  <div data-slideshow-target="slide">🙊</div>
</div>
